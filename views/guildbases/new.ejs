
<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">New Guildbase</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/guildbases" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="guildbase[title]" required>
                <div class="valid-feedback">
                    great!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="guildbase[location]" required>
                <div class="valid-feedback">
                    great!
                </div>
            </div>
            
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="guildbase[image]" required>
                <div class="valid-feedback">
                    great!
                </div>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="fee">Guildbase Fee</label>
                <div class="input-group">
                    <span class="input-group-text" id="fee-label">â‚¬</span>
                    <input type="text" class="form-control" id="fee" placeholder="0.00" aria-label="fee"
                        aria-describedby="fee-label" name="guildbase[fee]" required>
                        <div class="valid-feedback">
                            great!
                        </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="guildbase[description]" required></textarea>
                <div class="valid-feedback">
                    great!
                </div>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Guildbase</button>
            </div>
        </form>
        <a href="/guildbases">All Guildbases</a>
    </div>
</div>


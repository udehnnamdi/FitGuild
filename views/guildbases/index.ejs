<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
    <h1>All Guildbases</h1>
    <div>
        <a href="/guildbases/new">Add Guildbase</a>
    </div>
    <% for (let guildbase of guildbases){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(guildbase.images.length) {%>
                <img class="img-fluid" alt="" src="<%=guildbase.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/dlreib63z/image/upload/v1619208179/FitGuild/noiy6ki7b1x60ir1mmsq.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= guildbase.title %> </h5>
                    <p class="card-text"><%= guildbase.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= guildbase.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/guildbases/<%=guildbase._id%>">View <%=guildbase.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const guildbases = { features: <%- JSON.stringify(guildbases) %>}
    </script>

    <script src="/javascripts/clusterMap.js"></script>
